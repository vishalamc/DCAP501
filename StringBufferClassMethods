//Example StringBuffer/StringBuilder class methods:

class stringBufferClassEx
{

	public static void main(String []args)
	{
	
	StringBuffer sb=new StringBuffer("hello Venktesh");
	sb.append("world");// method1
	System.out.println(sb);
	sb.append("world");
	sb.append("world");
	sb.append("world");
	sb.ensureCapacity(12);//method2
	System.out.println(sb);
	System.out.println(sb.capacity());//method3
	System.out.println(sb);
	System.out.println(sb.insert(1,"vishal"));//method4
	System.out.println(sb);	
	System.out.println(sb.reverse());//method5
	System.out.println(sb);
	sb.replace(1,3,"hello");//method6
	System.out.println(sb);
	System.out.println(sb.length());//method7
	System.out.println(sb);
	sb.delete(1,3);//method8
	System.out.println(sb);
	sb.deleteCharAt(3);//method9
	System.out.println(sb);
	System.out.println(sb.substring(5,14));//method 10

}

}
